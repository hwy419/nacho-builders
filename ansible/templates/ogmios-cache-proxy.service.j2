[Unit]
Description=Ogmios WebSocket Caching Proxy
Documentation=https://github.com/nacho-builders/cardano-api-service
After=network.target redis-server.service
Wants=redis-server.service

[Service]
Type=simple
User={{ app_user }}
Group={{ app_group }}
WorkingDirectory=/opt/ogmios-cache-proxy

# Environment
Environment=NODE_ENV={{ node_env }}
Environment=OGMIOS_PROXY_PORT=3001
Environment=REDIS_URL=redis://127.0.0.1:6379
Environment=OGMIOS_HOST_1=192.168.160.11:1337
Environment=OGMIOS_HOST_2=192.168.160.12:1337

# Run the proxy
ExecStart=/usr/bin/node /opt/ogmios-cache-proxy/ogmios-cache-proxy.js
Restart=always
RestartSec=5

# Resource limits
LimitNOFILE=65535
MemoryMax=512M

# Security hardening
NoNewPrivileges=yes
ProtectSystem=strict
ProtectHome=yes
ReadWritePaths=/opt/ogmios-cache-proxy
PrivateTmp=yes

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=ogmios-cache-proxy

[Install]
WantedBy=multi-user.target
