# Cardano API Service - Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# Database
# ===========================================
DATABASE_URL="postgresql://cardano:YOUR_PASSWORD@localhost:5432/cardano_api?schema=public"

# ===========================================
# NextAuth Configuration
# ===========================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
# The canonical URL of your site
NEXTAUTH_URL="https://app.nacho.builders"

# ===========================================
# OAuth Providers
# ===========================================

# Google OAuth (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Microsoft Entra ID (https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps)
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""
MICROSOFT_TENANT_ID="common"

# ===========================================
# Email Provider (Magic Links)
# ===========================================
# SMTP connection string format: smtp://user:password@smtp.example.com:587
EMAIL_SERVER=""
EMAIL_FROM="noreply@nacho.builders"

# ===========================================
# Kong Gateway
# ===========================================
KONG_ADMIN_URL="http://localhost:8001"
# Secret for Kong -> App internal API calls (generate with: openssl rand -base64 32)
KONG_INTERNAL_SECRET="your-kong-internal-secret-here"

# ===========================================
# Application
# ===========================================
NODE_ENV="production"
